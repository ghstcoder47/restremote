<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL">

  <Properties>
    <!-- <Property name="logPath">${jboss.server.log.dir}</Property> -->
    <Property name="logPath">/data/innovas/testsystemVerwaltung/log4jlogs</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5level] %c{1} - %msg%n" />
    </Console>

    <RollingFile name="fileTrace" fileName="${logPath}/trace-logging.log" filePattern="${logPath}/trace-%d{yyyy-MM-dd}_%i.log">
      <!-- Filter -->
      <Filters>
        <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY" />
      </Filters>

      <!-- log pattern -->
      <!-- datum level classe message -->
      <PatternLayout>
        <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %c{1} - %msg%n</pattern>
      </PatternLayout>
      <!-- set file size policy -->
      <Policies>
        <SizeBasedTriggeringPolicy size="50 MB" />
      </Policies>
      <DefaultRolloverStrategy max="20" />
    </RollingFile>

    <RollingFile name="fileDebug" fileName="${logPath}/debug-logging.log" filePattern="${logPath}/debug-%d{yyyy-MM-dd}_%i.log">
      <!-- Filter -->
      <Filters>
        <ThresholdFilter level="debug" onMatch="ACCEPT" onMissmatch="DENY" />
      </Filters>

      <!-- log pattern -->
      <!-- datum level classe message -->
      <PatternLayout>
        <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %c{1} - %msg%n</pattern>
      </PatternLayout>
      <!-- set file size policy -->
      <Policies>
        <SizeBasedTriggeringPolicy size="50 MB" />
      </Policies>
      <DefaultRolloverStrategy max="20" />
    </RollingFile>

    <RollingFile name="fileInfo" fileName="${logPath}/info-logging.log" filePattern="${logPath}/info-%d{yyyy-MM-dd}_%i.log">
      <!-- Filter -->
      <Filters>
        <ThresholdFilter level="info" onMatch="ACCEPT" onMissmatch="DENY" />
      </Filters>

      <!-- log pattern -->
      <!-- datum level classe message -->
      <PatternLayout>
        <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %c{1} - %msg%n</pattern>
      </PatternLayout>
      <!-- set file size policy -->
      <Policies>
        <SizeBasedTriggeringPolicy size="50 MB" />
      </Policies>
      <DefaultRolloverStrategy max="20" />
    </RollingFile>

    <RollingFile name="fileError" fileName="${logPath}/error-logging.log" filePattern="${logPath}/error-%d{yyyy-MM-dd}_%i.log">
      <!-- Filter -->
      <Filters>
        <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY" />
      </Filters>
      <!-- log pattern -->
      <!-- datum level classe message -->
      <PatternLayout>
        <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %c{1} - %msg%n</pattern>
      </PatternLayout>
      <!-- set file size policy -->
      <Policies>
        <SizeBasedTriggeringPolicy size="50 MB" />
      </Policies>
      <DefaultRolloverStrategy max="20" />
    </RollingFile>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console" />
      <AppenderRef ref="fileTrace" />
      <AppenderRef ref="fileDebug" />
      <AppenderRef ref="fileInfo" />
      <AppenderRef ref="fileError" />
    </Root>
  </Loggers>
</Configuration>
